    <div id="main_div">
  <div id="header_div">
    <div id="header_left" class="foothead">
      <p id="title_p"><span>B</span>abble <span>B</span>log</p>
    </div>
    <div id="header_right">
      <ul>
        <li><%= link_to "Home", pages_home_path %></li>
        <li><%= link_to "Blogs", blogs_path %></li>
        <li><%= link_to "Gallery", pages_gallery_path %></li>
        <li><%= link_to "Reader", pages_reader_path %></li>
        <li><%= link_to "About", pages_about_path %></li>
      </ul>
    </div>
  </div>

  <div id="content_div">
    <p id="notice"><%= notice %></p>


    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Subtitle</th>
          <th>Body</th>
          <th>Image</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <div>
        <% @blogs.each do |blog| %>
          <div id="blog_div">
            <div id="blog_title"><%= blog.title %></div>
            <div><%= blog.subtitle %></div>
            <div><%=image_tag blog.image %></div>
            <div><%= blog.body %></div>
            <div class="blog_btn"><%= link_to 'Show', blog %></div>
            <div class="blog_btn"><%= link_to 'Edit', edit_blog_path(blog) %></div>
            <div class="blog_btn"><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></div>
          </div>
        <% end %>
      </div>
    </table>

    <br>

    <%= link_to 'New Blog', new_blog_path %>

  </div>

  <div id="footer_div" class="foothead">
    <p><em>&reg Registered trademark of nothing at all, no rights reserved</em></p>
  </div>
</div>
